@model Domain.Entities.BorrowedBook

@{
    ViewData["Title"] = "Видалити";
}
<style>
    * {
        color: whitesmoke;
    }

    p {
        margin-bottom: 14px;
    }

    .color {
        background-color: whitesmoke;
    }

    a {
        text-decoration: none;
        color: #ffffbb;
    }

        a:hover {
            color: #ffff91;
        }

    .btn {
        margin: 15px 0;
    }

    input {
        color: black;
    }

    form p {
        display: flex;
        flex-direction: row;
        align-items: center;
    }

        form p * {
            margin: 0 5px;
        }

    .form-group .form-control * {
        color: black;
    }

    .navbar {
        display: none;
    }
</style>
<body class="bg-dark">
<h1>Видалити</h1>

<h3>Ви певні що хочете видалити це?</h3>
<div>
    <h4>Замовлення</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReaderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReaderName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Назад до списку</a>
    </form>
</div>
</body>