<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Магазин пластинок</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebMVC.styles.css" asp-append-version="true" />

    <style>
        .nav-link{
            margin-right: 25px;
            color: rgb(180, 180, 180);
        }
        
        .nav-link:hover{
            color: whitesmoke;
        }

        .navbar{
            position:fixed;
            width: 100vw;
            font-size: 1.1rem;
            padding-top: .1rem;
            padding-bottom: .1rem;
            z-index: 10;
        }

        .flex-grow-1 {
            display: flex;
            align-items: center;
        }

        .с{
            padding-top: 75px;
            z-index: 1;
        }

        .footer{
            line-height: 50px;
        }
        .container{
            color: #6c757d !important;
        }

        .dropdown{
            position: absolute;
            width: 180px;
            list-style: none;
            z-index: 20;
            display: none;
        }

        .nav-item:hover .dropdown {
            display: block; 
        }
        .dropdown-link{
            width: 100%;
            border: 1px solid #6c757d;
            display: block;
        }

        .dropdown-link:hover {
            background-color: #6c757d !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><img src="../css/vynil.png" alt="Alternate Text" /></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index">Вінілові пластинки</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Authors" asp-action="Index">Автори</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="BorrowedBooks" asp-action="Index">Замовлення</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Genres" asp-action="Index">Жанри</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Publishers" asp-action="Index">Лейбли</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Readers" asp-action="Index">Користувачі</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Queries" asp-action="Index">Запити</a>
                            @* <ul class="dropdown">
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query1">Запит 1</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query2">Запит 2</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query3">Запит 3</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query4">Запит 4</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query5">Запит 5</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query6">Запит 6</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query7">Запит 7</a></li>
                                <li><a class="bg-dark nav-link dropdown-link" asp-area="" asp-controller="Home" asp-action="Query8">Запит 8</a></li>
                            </ul> *@
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container с">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-dark">
        <div class="container">
            &copy; 2024 - Магазин пластинок
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
